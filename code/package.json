{
  "name": "pressure-monitor",
  "version": "1.0.0",
  "description": "Medical pressure monitoring application",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "vite build && electron-builder",
    "build:mac": "vite build && electron-builder --mac",
    "preview": "vite preview"
  },
  "dependencies": {
    "csv-parse": "^5.5.6",
    "csv-stringify": "^6.5.0",
    "recharts": "^2.12.7",
    "serialport": "^12.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.39",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.4",
    "vite": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.medical.pressure-monitor",
    "productName": "Pressure Monitor",
    "mac": {
      "category": "public.app-category.medical",
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "output": "release"
    }
  }
}
